<p id="notice"><%= notice %></p>

<h1>Listing Receta</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Porciones</th>
      <th>Tiempoprep</th>
      <th>Fechacreacion</th>
      <th>Tipo</th>
      <th>Image</th>
      <th>Procedimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receta.each do |recetum| %>
      <tr>
        <td><%= recetum.nombre %></td>
        <td><%= recetum.descripcion %></td>
        <td><%= recetum.porciones %></td>
        <td><%= recetum.tiempoPrep %></td>
        <td><%= recetum.fechaCreacion %></td>
        <td><%= recetum.tipo %></td>
        <td><%= recetum.image %></td>
        <td><%= recetum.procedimiento %></td>
        <td><%= link_to 'Show', recetum %></td>
        <td><%= link_to 'Edit', edit_recetum_path(recetum) %></td>
        <td><%= link_to 'Destroy', recetum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

