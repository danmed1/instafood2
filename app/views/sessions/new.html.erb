<div class="container-fluid">

<br /><br />

<div class="col-lg-2"></div>                  
                        <div class="col-lg-7">
                            <center>
                                <div class="panel panel-red">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><i class="fa fa-user fa-fw"></i> LogIn</h3>
                                </div>
                                <div class="panel-body">
                                     <%= form_for(:session, url: loginPrueba_path) do |f| %>
                                     <%= f.label :email %>
                                     <%= f.email_field :email, class: 'form-control' %>
                                     <%= f.label :password %>
                                     <%= f.password_field :password, class: 'form-control' %>
                                     <%= f.submit "Entrar", class: "btn btn-primary", id:"botonInicio" %>
                                     <div  id='singup_error'>
                                     </div>
                                     <% end %>
                                    <p>¿Nuevo usuario? <%= link_to "Regístrate ahora!", signup_path %></p>
                                </div>
                            </div>
                            </center>
                        <div class="col-lg-3"></div> 
                    </div>
                                    </div>
            </div>
    <script>     
        $('#botonInicio').click(function(e) {
            if($('#session_email').val().length == 0 || $('#session_password').val().length==0){
                var out = '<div class="alert alert-danger"<strong>Oh snap!</strong> Por favor ingresa un correo electrónico y contraseña válidos</div>'
                $("#singup_error").html(out);
                e.preventDefault();
            }
        });
    </script>